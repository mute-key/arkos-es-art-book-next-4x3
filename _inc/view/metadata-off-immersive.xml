<theme>
    <view name="detailed,video">
        <image name="gamelist-background" extra="true">
            <size>0.5 1</size>
        </image>
    </view>
    <view name="detailed">
        <image name="md_image">
            <origin>0.5 0.5</origin>
            <pos>0.75 0.5</pos>
            <color>FFFFFF99</color>
            <maxSize>1.1 1.1</maxSize>
        </image>
        <image name="md_marquee">
            <pos>0.75 0.5</pos>
            <maxSize>0.4 0.9</maxSize>
        </image>
    </view>
    <view name="video">
        <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.75 0.5</pos>
            <maxSize>1.1 1.1</maxSize>
            <effect>none</effect>
            <showSnapshotDelay>true</showSnapshotDelay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <color>FFFFFF99</color>
        </video>
        <image name="md_marquee">
            <pos>0.75 0.5</pos>
            <maxSize>0.4 0.9</maxSize>
        </image>
    </view>
</theme>